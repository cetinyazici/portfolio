@model List<Services>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">
<i class="bi bi-cone-striped"></i>
    Service Page
</h1>
<div class="my-3">
    <a href="/Admin/Service/AddService" class="btn btn-primary">
        <i class="bi bi-arrow-up"></i>
        ADD NEW
    </a>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>ServicesName</th>
                <th>Description</th>
                <th>UPDATE</th>
                <th>REMOVE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesId</td>
                    <td>@item.ServicesName</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/Service/UpdateService/@item.ServicesId" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                            UPDATE
                        </a>
                    </td>
                    <td>
                        <a href="/Admin/Service/DeleteService/@item.ServicesId" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            REMOVE
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>