@model List<Skills>
<!-- ======= Skills Section ======= -->
<section id="skills" class="skills section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Yetenekler</h2>
            <p>
                Bu bölümde, teknik ve profesyonel yeteneklerimi listeliyorum.
                Sahip olduğum beceriler, çeşitli projelerde kazandığım deneyimleri ve uzmanlık alanlarımı yansıtır.
                Yeteneklerim, bana karmaşık sorunları çözme,
                verimli çalışma ve yüksek kaliteli sonuçlar üretme yeteneği kazandırdı.
            </p>
        </div>
        <div class="row skills-content">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="progress">
                        <span class="skill">@item.SkillsName<i class="val"></i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End Skills Section -->