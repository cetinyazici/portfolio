@model ProfileEditDTO
<div class="tab-pane fade profile-edit pt-3" id="profile-edit">
    <form method="post" asp-action="EditProfile">
        <div class="row mb-3">
            <label for="name" class="col-md-4 col-lg-3 col-form-label">Name</label>
            <div class="col-md-8 col-lg-9">
                <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
            </div>
        </div>
        <div class="row mb-3">
            <label for="surname" class="col-md-4 col-lg-3 col-form-label">Surname</label>
            <div class="col-md-8 col-lg-9">
                <input type="text" class="form-control" id="surname" name="Surname" value="@Model.Surname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
            <div class="col-md-8 col-lg-9">
                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email">
            </div>
        </div>
        <div class="row mb-3">
            <label for="gender" class="col-md-4 col-lg-3 col-form-label">Gender</label>
            <div class="col-md-8 col-lg-9">
                <input type="text" class="form-control" id="gender" name="Gender" value="@Model.Gender">
            </div>
        </div>
        <div class="row mb-3">
            <label for="imageUrl" class="col-md-4 col-lg-3 col-form-label">Image URL</label>
            <div class="col-md-8 col-lg-9">
                <input type="text" class="form-control" id="imageUrl" name="ImageUrl" value="@Model.ImageUrl">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>

</div>