@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">
    <i class="bi bi-info-circle"></i>
    About Page
</h1>
<div class="my-3">
    <a href="/Default/Index" target="_blank" class="btn btn-primary">
        <i class="bi bi-globe"></i>
        See on site
    </a>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Name</th>
                <th>City</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Subtitle</th>
                <th>Description1</th>
                <th>Description2</th>
                <th>UPDATE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                    <td>@item.Mail</td>
                    <td>@item.Phone</td>
                    <td>@(item.Subtitle.Length > 50 ? item.Subtitle.Substring(0, 25) + "..." : item.Subtitle)</td>
                    <td>@(item.Description1.Length > 50 ? item.Description1.Substring(0, 25) + "..." : item.Description1)</td>
                    <td>@(item.Description2.Length > 50 ? item.Description1.Substring(0, 55) + "..." : item.Description1)</td>
                    <td>
                        <a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                            UPDATE
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
