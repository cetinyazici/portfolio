@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">
    <i class="bi bi-chat-left-quote"></i>
    Add Testimonial Page
</h1>
<form method="post">
    <input type="hidden" asp-for="TestimonialId" />
    <div class="form-group">
        @Html.Label("Name")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Position")
        <input type="text" asp-for="Position" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("ProfileImageUrl")
        <input type="text" asp-for="ProfileImageUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Text")
        <textarea cols="30" rows="5" class="form-control" asp-for="Text"></textarea>
    </div>
    <br />
    <button class="btn btn-primary">
        <i class="bi bi-save"></i>
        Add
    </button>
</form>

