@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="text-center">
    <i class="bi bi-briefcase"></i>
    Portfolio Update Page
</h1>
<form method="post">
    <input type="hidden" asp-for="GalleryId" />
    <div class="form-group">
        @Html.Label("Title")
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("ImageUrl")
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Description")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Type")
        <input type="text" asp-for="Type" class="form-control" />
    </div>
    <br />
    <button class="btn btn-primary">
        <i class="bi bi-save"></i>
        Update
    </button>
</form>

