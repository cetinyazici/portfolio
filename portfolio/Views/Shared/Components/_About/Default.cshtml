@model List<About>
<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        @foreach (var item in Model)
        {
            <div class="section-title">
                <h2>Hakkında</h2>
                <p>@item.Description1</p>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <img src="~/MyResume/assets/img/profile-img.jpg" class="img-fluid rounded-circle border border-3 border-primary" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content">
                    <h3>@item.Title</h3>
                    <p class="fst-italic">
                        @item.Subtitle
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-person"></i><span>@item.Name</span></li>
                                <li><i class="bi bi-geo-alt"></i><span>@item.City</span></li>
                                <li><i class="bi bi-telephone"></i><a href="tel:@item.Phone">@item.Phone</a></li>
                                <li><i class="bi bi-envelope"></i><a href="mailto:@item.Mail">@item.Mail</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><a href="@item.LinkedinUrl" target="_blank"><i class="bi bi-linkedin"></i> LinkedIn Profil</a></li>
                                <li> <a href="@item.GithubUrl" target="_blank"><i class="bi bi-github"></i> GitHub Profil</a></li>
                            </ul>
                        </div>
                    </div>
                    <p class="mt-3">
                        @item.Description2
                    </p>
                </div>
            </div>
        }

    </div>
</section>
<!-- End About Section -->